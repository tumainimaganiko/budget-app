<h1 class="text-3xl text-center">Welcome <b><%= @current_user.email %></b></h1>
<% if @transanctions.empty? %>
  <h2 class="text-center">There is no transanctions for now</h2>
<% end %>
<div class="flex items-center justify-end mb-6">

  <%= link_to 'Add New Transanction', new_exchange_path, class: "px-4 py-2 border-2 border-black cursor:pointer" %>
</div>
<div class="w-10/12 mx-auto">
    <ul>
        <% @transanctions.each do |transanction| %>
          <li class="my-6">
          <p><%= transanction.amount%></p>
          <p><%= transanction.name %></p>
          </li>
        <% end %>
    </ul>
</div>
